<!DOCTYPE html>
<html>
	<head>
		<meta charset='utf-8'>
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<!-- Optional theme -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
	</head>

	<body>
		<div id='cart_div'>
			<h1 class="jumbotron01">Shopping Cart</h1>
			<table class="table table-hover">
				<thead class="lead">
					<th> Product </th>
					<th> Description </th>
					<th> Seller </th>
					<th> Price </th>
					<th> Action </th>
				</thead>
				<tbody class="lead">
					<td> <%= @products.product_name %> </td>
					<td> <%= @products.product_description %> </td>
					<td> <%= @products.sellerIDnumber %> </td>
					<td> <%= @products.product_price %> </td>
					<td>
						<form class="form-horizontal" action='/update_product' method='post'>
							<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
							<input name='id' type='hidden' value=<%= @products.id %>>
							<input type='hidden' name='sell_status' value='false'>
							<input type='hidden' name='bought_status' value='true'>
							<input type='hidden' name='buyer_id' value=<%= @user.id %>>
							<input class="btn btn-primary" type='submit' value='Buy' />
						</form>
					</td>
				</tbody>
			</table>
			<br>
			<form class="form-horizontal" action='/all_products'>
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input class="btn btn-primary" type='submit' value='Back' />
			</form>
		</div>
	</body>
</html>